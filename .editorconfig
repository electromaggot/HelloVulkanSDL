root = true

[*]
end_of_line = lf
insert_final_newline = true

# Matches multiple files with brace expansion notation
[*.{cpp,h,c,hpp}]
charset = utf-8
indent_style = tab
indent_size = 4
trim_trailing_whitespace = true

[*.{vert,frag,glsl}]
indent_style = tab
indent_size = 4

[*.{txt}]
indent_style = tab
indent_size = 4

[*.{sh,bash,bat}]
indent_style = space
indent_size = 2

[*.md]
trim_trailing_whitespace = false
